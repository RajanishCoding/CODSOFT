<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    tools:context=".QuoteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/quoteView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="#5912007B"
            android:elevation="0dp"
            android:outlineSpotShadowColor="#00000000"
            android:outlineAmbientShadowColor="#00000000"
            app:cardCornerRadius="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/quoteText"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="20dp"
                    android:paddingHorizontal="25dp"
                    android:paddingVertical="20dp"
                    android:gravity="center"
                    android:text="If I find 10,000 ways something won't work, I haven't failed. I am not discouraged, because every wrong attempt discarded is another step forward."
                    android:lineSpacingExtra="12dp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="15sp"
                    android:autoSizeMaxTextSize="25sp"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:id="@+id/authorText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingBottom="30dp"
                    android:text="-- Thomas Edison --"
                    android:textSize="20sp"
                    android:fontFamily="monospace"
                    android:textColor="@color/white"
                    android:textAlignment="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/buttonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/favorB"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:background="@drawable/shape_button"
                android:text="Favorite"
                android:textSize="15sp"
                android:textColor="@color/text"
                android:drawableLeft="@drawable/round_favorite"
                android:paddingHorizontal="15dp"
                android:drawableTint="#FFE6E6"
                />

<!--            <ImageButton-->
<!--                android:id="@+id/refreshB"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:background="@drawable/shape_button"-->
<!--                android:src="@drawable/round_refresh"-->
<!--                app:tint="@color/white"-->
<!--                android:padding="10dp"-->
<!--                android:layout_marginEnd="10dp"-->
<!--                android:layout_gravity="end"-->
<!--                />-->

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/shareB"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/shape_button"
                android:text="Share"
                android:textSize="15sp"
                android:textColor="@color/text"
                android:drawableLeft="@drawable/round_share"
                android:paddingHorizontal="15dp"
                android:drawableTint="#FFE6E6"
                />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>