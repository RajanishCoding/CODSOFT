<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginVertical="5dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/selector_list_view">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="5dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/contentT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:paddingStart="8dp"
            android:text="Hello World"
            android:textSize="18sp"
            android:textColor="@color/textGrey"
            android:maxLines="4"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/authorT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingStart="8dp"
            android:text="Hello World"
            android:textColor="@color/textGrey"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="visible" />

        <TextView
            android:id="@+id/dateT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:paddingHorizontal="8dp"
            android:background="@drawable/shape_items_details"
            android:text="Added on: 14 Jun, 2025"
            android:textColor="@color/textGrey"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/favorB"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:layout_marginHorizontal="10dp"
        android:contentDescription="Remove from Favourites"
        android:src="@drawable/round_favorite"
        app:tint="@color/red"
        android:background="@android:color/transparent"
        />

</LinearLayout>